<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDisplayName</key>
    <string>Echo</string>
    <key>CFBundleIdentifier</key>
    <string>com.echo.app</string>
    <key>CFBundleName</key>
    <string>Echo</string>
    <key>CFBundleShortVersionString</key>
    <string>0.1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>
    <key>UILaunchScreen</key>
    <dict/>
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>armv7</string>
    </array>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Privacy Permissions -->
    <key>NSCalendarsUsageDescription</key>
    <string>Echo needs access to your calendar to help you manage events</string>
    <key>NSRemindersUsageDescription</key>
    <string>Echo needs access to your reminders to help you stay organized</string>
    <key>NSContactsUsageDescription</key>
    <string>Echo needs access to your contacts to help you send emails</string>
    <key>NSCameraUsageDescription</key>
    <string>Echo needs camera access to let you share photos</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Echo needs photo library access to let you share photos</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>Echo needs microphone access for voice notes</string>

    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>

    <!-- Background Modes (for sync) -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>
</dict>
</plist>
